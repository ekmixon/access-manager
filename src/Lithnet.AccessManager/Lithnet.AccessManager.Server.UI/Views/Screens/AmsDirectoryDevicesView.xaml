            <StackPanel Grid.Row="3"
                Orientation="Horizontal"
                    Margin="10 5 5 5">
                <Button Command="{s:Action ApproveDevice}" 
                    Content="Approve" 
                    Margin="5"/>
                <Button Command="{s:Action RejectDevice}" 
                    Content="Reject" 
                    Margin="5"/>
                <Button Command="{s:Action DeleteDevice}"
                    Content="Delete..."
                    Margin="5"/>

            </StackPanel>
        </Grid>
    </views:CanvasEx>
</UserControl>

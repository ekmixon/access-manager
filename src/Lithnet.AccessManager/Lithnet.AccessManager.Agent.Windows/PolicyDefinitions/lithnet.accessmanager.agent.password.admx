<?xml version="1.0" encoding="utf-8"?>
<policyDefinitions xmlns="http://www.microsoft.com/GroupPolicy/PolicyDefinitions" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" revision="1.0" schemaVersion="1.0">
  <policyNamespaces>
    <target prefix="agentPassword" namespace="Lithnet.AccessManager.Password.Agent"/>
    <using prefix="agent" namespace="Lithnet.AccessManager.Agent" />
    <using prefix="windows" namespace="Microsoft.Policies.Windows" />
    <using prefix="lithnet" namespace="Lithnet" />
  </policyNamespaces>
  <supersededAdm fileName="" />
  <resources minRequiredRevision="1.0" />
  <supportedOn>
    <definitions>
      <definition name="TS_SUPPORTED_OS" displayName="$(string.TS_SUPPORTED_OS)" />
    </definitions>
  </supportedOn>
  <categories>
    <category name="cat_lithnet_accessManagerAgent_password_ad" displayName="$(string.cat_lithnet_accessManagerAgent_password_ad)">
      <parentCategory ref="agent:cat_lithnet_accessManagerAgent" />
    </category>

    <!--<category name="cat_lithnet_accessManagerAgent_password_ams" displayName="$(string.cat_lithnet_accessManagerAgent_password_ams)">
      <parentCategory ref="agent:cat_lithnet_accessManagerAgent" />
    </category>-->

  </categories>
  <policies>
    <policy name="pol_password_generation_ad"
            class="Machine"
            displayName="$(string.pol_password_generation_ad)"
            explainText="$(string.pol_password_generation_ad_help)"
            key="Software\Policies\Lithnet\Access Manager Agent\Password"
            valueName="Enabled"
           presentation="$(presentation.pol_password_generation_ad)">
      <parentCategory ref="cat_lithnet_accessManagerAgent_password_ad" />
      <supportedOn ref="TS_SUPPORTED_OS" />
      <elements>
        <enum id="enum_MsMcsAdmPwdBehaviour" required="true" valueName="MsMcsAdmPwdBehaviour">
          <item displayName="$(string.enum_MsMcsAdmPwdBehaviour_ignore)">
            <value>
              <decimal value="0"/>
            </value>
          </item>
          <item displayName="$(string.enum_MsMcsAdmPwdBehaviour_populate)">
            <value>
              <decimal value="1"/>
            </value>
          </item>
          <item displayName="$(string.enum_MsMcsAdmPwdBehaviour_clear)">
            <value>
              <decimal value="2"/>
            </value>
          </item>
        </enum>
        <decimal id="dtxt_passwordLength" key="Software\Policies\Lithnet\Access Manager Agent\Password" valueName="PasswordLength" required="true" minValue="6" maxValue="255"/>
        <decimal id="dtxt_passwordAge" valueName="MaximumPasswordAge" required="true" minValue="1" maxValue="99999"/>
        <boolean id="ck_useUpper" valueName="UseUpper">
          <trueValue>
            <decimal value="1" />
          </trueValue>
          <falseValue>
            <decimal value="0" />
          </falseValue>
        </boolean>
        <boolean id="ck_useLower" valueName="UseLower">
          <trueValue>
            <decimal value="1" />
          </trueValue>
          <falseValue>
            <decimal value="0" />
          </falseValue>
        </boolean>
        <boolean id="ck_useSymbol" valueName="UseSymbol">
          <trueValue>
            <decimal value="1" />
          </trueValue>
          <falseValue>
            <decimal value="0" />
          </falseValue>
        </boolean>
        <boolean id="ck_useNumeric" valueName="UseNumeric">
          <trueValue>
            <decimal value="1" />
          </trueValue>
          <falseValue>
            <decimal value="0" />
          </falseValue>
        </boolean>
        <decimal id="dtxt_passwordHistoryDaysToKeep"  valueName="PasswordHistoryDaysToKeep" required="false" minValue="0" maxValue="365"/>
      </elements>
    </policy>

    <policy name="pol_password_generation_ams"
            class="Machine"
            displayName="$(string.pol_password_generation_ams)"
            explainText="$(string.pol_password_generation_ams_help)"
            key="Software\Policies\Lithnet\Access Manager Agent"
            valueName="AmsPasswordStorageEnabled"
            presentation="$(presentation.pol_password_generation_ams)">
      <parentCategory ref="cat_lithnet_accessManagerAgent_password_ad" />
      <supportedOn ref="TS_SUPPORTED_OS" />
      <enabledValue>
        <decimal value="1" />
      </enabledValue>
      <disabledValue>
        <decimal value="0" />
      </disabledValue>
    </policy>
  </policies>
</policyDefinitions>
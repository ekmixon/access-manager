{
  "@type": "MessageCard",
  "@context": "http://schema.org/extensions",
  "summary": "✅ Access to a computer was granted",
  "title": "✅ Access to a computer was granted",
  "sections": [
    {
      "title": "Details",
      "facts": [
        {
          "name": "Granted access",
          "value": "{AuthZResult.AccessTypeDescription}"
        },
        {
          "name": "Name",
          "value": "{user.DisplayName}"
        },
        {
          "name": "User name",
          "value": "{user.MsDsPrincipalName}"
        },
        {
          "name": "Computer",
          "value": "{computer.MsDsPrincipalName}"
        },
        {
          "name": "Access expiry",
          "value": "{AuthzResult.AccessExpiryDate}"
        },
        {
          "name": "Matched rule",
          "value": "{AuthzResult.MatchedRuleDescription}"
        },
        {
          "name": "Request reason",
          "value": "{request.Reason}"
        }
      ]
    }
  ]
}